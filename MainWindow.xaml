<Window x:Class="WinformsApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="3D Window (WPF)" Width="1280" Height="720"
        Background="#101014">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="260" />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#0f0f14">
            <Grid>
                <ContentControl x:Name="RenderHost" Focusable="True" />
                <Border x:Name="InputOverlay" Background="Transparent" />
            </Grid>
        </Border>

        <Border Grid.Column="1" Background="#141418" Padding="12">
            <StackPanel>
                <TextBlock Text="Samples per pixel" Foreground="Gainsboro" Margin="0,4,0,4" />
                <Slider x:Name="SppSlider" Minimum="1" Maximum="8" Value="2" TickFrequency="1" IsSnapToTickEnabled="True" />

                <TextBlock Text="Max bounces" Foreground="Gainsboro" Margin="0,10,0,4" />
                <Slider x:Name="BouncesSlider" Minimum="1" Maximum="8" Value="3" TickFrequency="1" IsSnapToTickEnabled="True" />

                <TextBlock Text="Ambient" Foreground="Gainsboro" Margin="0,10,0,4" />
                <Slider x:Name="AmbientSlider" Minimum="0" Maximum="0.2" Value="0.03" TickFrequency="0.01" IsSnapToTickEnabled="False" />

                <CheckBox x:Name="VsyncCheck" Content="VSync" IsChecked="True" Foreground="Gainsboro" Margin="0,10,0,0" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
